{
    "name": "marcostmunhoz/laracasts-transcriptions",
    "description": "A package to handle VTT file loading, parsing and rendering.",
    "autoload": {
        "psr-4": {
            "MarcosTMunhoz\\LaracastsTranscriptions\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Marcos Tesolin Munhoz",
            "email": "marmunhoz414@gmail.com"
        }
    ],
    "scripts": {
        "test": "pest",
        "test:watch": "phpunit-watcher watch",
        "test:coverage": "pest --coverage"
    },
    "config": {
        "process-timeout": 0,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "spatie/phpunit-watcher": "^1.23"
    }
}
